# Set the filename
FILENAME=project-version.ts
# Define Directory
DIR=$FILENAME
# How the version was built ğŸ¥µ
# %Y - Year
# %m - month (01..12)
# %d - day of month
# %H - hour (00..23)
VERSION_VALUE=$(date +"%Y%m%d%H")
# Check the file is exists or not
if [ -f $FILENAME ]; then
  rm $FILENAME
fi

# Create VERSION NAME File
echo "export const VERSION = $VERSION_VALUE" > $DIR && git add $DIR

npm run lint --fix
# npm run snyk
# npm run sonar
npm run build